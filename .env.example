# Database Connection
# connection_limit: max concurrent connections (Prisma default: 10)
# pool_timeout: max wait time for available connection in seconds
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@localhost:5432/quick?connection_limit=20&pool_timeout=10

# JWT Configuration - USE STRONG SECRETS IN PRODUCTION (32+ characters)
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
JWT_EXPIRATION=8h
JWT_REFRESH_SECRET=your_refresh_secret_at_least_32_characters_long
JWT_REFRESH_EXPIRATION=7d

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN=https://www.quicktecnologia.com,https://quicktecnologia.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# LocationIQ API (for geocoding)
LOCATION_HOST=https://us1.locationiq.com/v1
LOCATION_KEY=your_locationiq_api_key

# Cloudinary (for file storage)
FILE_CLOUD_NAME=your_cloudinary_cloud_name
FILE_CLOUD_API_KEY=your_cloudinary_api_key
FILE_CLOUD_SECRET=your_cloudinary_secret

# Application
NODE_ENV=production
PORT=3000

# Optional: Disable Swagger in production
DISABLE_SWAGGER=true

# Docker Compose Variables
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_POSTGRES_PASSWORD
POSTGRES_DB=quick
